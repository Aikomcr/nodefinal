      <thead>
        <tr class="bg-green-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/4 py-4 ...">Nombre producto</th>
          <th class="w-1/2 py-4 ...">Tienda</th>
          <th class="w-1/2 py-4 ...">Precio</th>
          <th class="w-1/2 py-4 ...">Cantidad</th>
          <th class="w-28 py-4 ...">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each tasks}}
        <tr>
          <td class="py-3 px-6">{{id}}</td>
          <td class="p-3">{{nom_producto}}</td>
          <td class="p-3 text-center">{{tienda_prod}}</td>
          <td class="p-3 text-center">{{precio_prod}}</td>
          <td class="p-3 text-center">{{cantidad_prod}}</td>
          <td class="p-3 flex">
            <form action="/tasks/delete" method="POST" class="mx-2">
              <input type="hidden" value="{{id}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/tasks/edit/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
